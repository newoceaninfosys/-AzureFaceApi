@{
    ViewData["Title"] = "Home Page";
}
<div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="6000">
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
        <li data-target="#myCarousel" data-slide-to="3"></li>
        <li data-target="#myCarousel" data-slide-to="4"></li>
    </ol>
    <div class="carousel-inner" role="listbox">
        <div class="item active">
            <img src="~/images/face-detect.jpg" style="width:1140px;height:360px" alt="Detect" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    Detects up to 64 human faces with high precision face location in an image.
                    <a class="btn btn-default" asp-area="" asp-controller="Detect" asp-action="Index">Try it now!</a>
                </p>
            </div>
        </div>
        <div class="item">
            <img src="~/images/face-identity.jpg" style="width:1140px;height:360px" alt="Identity" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    Identify people based on a detected face and people database.
                    <a class="btn btn-default" asp-area="" asp-controller="Identify" asp-action="Index">Try it now!</a>
                </p>
            </div>
        </div>
        <div class="item">
            <img src="~/images/face-group.jpg" style="width:1140px;height:360px" alt="Group" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    Automatically divides one set of unknown faces into several groups based on similarity.
                    <a class="btn btn-default" asp-area="" asp-controller="Face" asp-action="GroupView">Try it now!</a>
                </p>
            </div>
        </div>
        <div class="item">
            <img src="~/images/face-verify.jpg" style="width:1140px;height:360px" alt="Verify" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    Verification performs an authentication against two detected faces.
                    <a class="btn btn-default" asp-area="" asp-controller="Face" asp-action="VerifyView">Try it now!</a>
                </p>
            </div>
        </div>
        <div class="item">
            <img src="~/images/face-similar.jpg" style="width:1140px;height:360px" alt="Similar" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    Find out similar faces ranked by similarity.
                    <a class="btn btn-default" asp-area="" asp-controller="Face" asp-action="FindSimilar">Try it now!</a>
                </p>
            </div>
        </div>
    </div>
    <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

